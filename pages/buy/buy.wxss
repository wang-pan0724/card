/* pages/buy.wxss */

.pic{
  width: 100%;
  height: 665rpx;
  padding: 100rpx 110rpx 10rpx 110rpx;
  box-sizing: border-box;
}

.pic image{
  width: 530rpx;
  height: 333rpx;
}

.info{
  position: relative;
  width: 500rpx;
  height: 205rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-top: 5px solid #EA4736;
  box-shadow: 4px 5px 4px #ccc;
  padding: 40rpx 0px;
  box-sizing: border-box;
  border-radius: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.info p{
  display: block;
  width: 500rpx;
  text-align: center;
}

.info .goodsName{
  font-size: 14px;
  color: #333;
  font-weight: bold;
}

.info .money{
  height: 75rpx;
  font-size: 20px;
  color: #DD3227;
  font-weight: bold;
  line-height: 75rpx;
}

.topay{
  width: 545rpx;
  height: 108rpx;
  border: 3px solid #FFB33B;
  background: #FFDE3B;
  border-radius: 55rpx;
  margin-top:50rpx;
}

.detail{
  position: relative;
  width: 700rpx;
  height: 205rpx;
  background: #FFFDF2;
  left: 50%;
  transform: translateX(-50%);
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
  font-size: 13px;
}

.detail view{
  height: 50rpx;
  line-height: 50rpx;
}