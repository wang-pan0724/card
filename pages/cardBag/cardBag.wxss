.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #777;
}

.on {
  color: #dd3227;
  border-bottom: 5rpx solid #dd3227;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #EBEBEB;
}

.swiper-box .empty{
  position:absolute;
  width:200rpx;
  height:200rpx;
  left:50%;
  transform:translateX(-50%);
  top:300rpx;
}

.float-left {
  float: left;
}

.float-right {
  float: right;
}


.list {
  height: 255rpx;
  margin: 30rpx 17rpx;
  border: 1px solid #e5e5e5;
  background: #fff;
}

.shopImg{
  width: 145rpx;
  height: 175rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.shopImg image{
  width: 145rpx;
  height: 145rpx;
}

.list .youhui-intr {
  padding: 20rpx;
  box-sizing: border-box;
  height: 175rpx;
  font-size: 14px;
  margin-left: 20rpx;
  width: 310rpx;
}

.list .youhui-intr .limit {
  color: #dd3227;
  width: 310rpx;
  height: 45rpx;
  line-height: 45rpx;
}

.list .youhui-intr .beizhu {
  width: 310rpx;
  height: 45rpx;
  line-height: 45rpx;
}

.list .youhui-intr .name {
  font-size: 16px;
  height: 55rpx;
  line-height: 55rpx;
}

.list .list-buy {
  font-size: 16px;
  width: 200rpx;
  height: 185rpx;
  /* background: url(../../app/assets/images/red.png) no-repeat center center; */
  background-size: contain;
  box-sizing: border-box;
  padding: 20rpx 0rpx 30rpx 30rpx;
}

.list-buy .price {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  font-size: 14px;
}

.list-buy .tobuy {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 30px;
  text-align: center;
  font-size: 13px;
}

.uestime{
  position: relative;
  width: 100%;
  font-size: 13px;
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 50rpx;
  line-height: 50rpx;
  color: #828181;
}
.emptyFont{
  font-size: 13px;
  width: 100%;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  position: relative;
  top: 520rpx;
  color: #AAAAAA;
}

.kaquanma{
  width: 100%;
  height: 100rpx;
}

.kaquanmaInfo{
  text-align: center;
  margin-top: 50rpx;
}

.kaquanmaNum{
  font-size: 18px;
  color: #DB2D30;
  font-weight: bold;
  margin-top: 10rpx;
  width: 100%;
  text-align-last:center;
}
